[
  {
    "id": "deploy",
    "execute-command": "/app/repo/deploy.sh",
    "command-working-directory": "/app/repo",
    "response-message": "Deploy triggered.",
    "trigger-rule": {
      "and": [
        {
          "match": {
            "type": "payload-hmac-sha256",
            "secret": "{{getenv \"WEBHOOK_SECRET\"}}",
            "parameter": {
              "source": "header",
              "name": "X-Hub-Signature-256"
            }
          }
        },
        {
          "match": {
            "type": "value",
            "value": "refs/heads/main",
            "parameter": {
              "source": "payload",
              "name": "ref"
            }
          }
        }
      ]
    }
  }
]
